<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroungimg"
    tools:context=".login">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginbtn" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="128dp"
        android:layout_height="236dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/parrot_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/headingf"
        android:text="Log in"
        android:textColor="#070707"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usertext"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/text"
        android:inputType="textEmailAddress"
        android:textColor="#FBFBFB"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usernameemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usernameemail"
        app:layout_constraintTop_toBottomOf="@+id/usernameemail"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/passlogtext"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginBottom="296dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/text"
        android:inputType="textPassword"
        android:textColor="#FBFBFB"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usertext" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="130dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/text"
        android:text="Log in"
        android:textColor="#FFFDFD"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/passlogtext"
        app:layout_constraintTop_toBottomOf="@+id/registerbtn" />

    <TextView
        android:id="@+id/usernameemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/text"
        android:text="Username/Email:"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/text"
        android:text="New here? Register"
        android:textColor="#FFFDFD"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/loginbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passlogtext" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/text"
        android:text="password:"
        android:textColor="#070707"
        app:layout_constraintStart_toStartOf="@+id/passlogtext"
        app:layout_constraintTop_toBottomOf="@+id/usertext" />

</androidx.constraintlayout.widget.ConstraintLayout>